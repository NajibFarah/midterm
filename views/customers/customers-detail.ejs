<!DOCTYPE html>
<html lang="en">
  <!-- Head tag -->
  <%- include('../partials/_head', { title: 'Home page'}) %>

  <body>
    <!-- Navbar -->
    <%- include('../partials/_nav') %>

    <!-- Menu item -->
    <section id="menu-detail">
      <!-- Image -->
      <img src="<%= foodArr.picture_url %>">

      <!-- Food info container -->
      <div class="food-info">
        <h2><%= foodArr.food_name.toUpperCase() %></h2>
        <p><%= foodArr.price %></p>
        <p><%= foodArr.description %></p>
        <form action="/customers/new" method="POST" class="add-to-cart-form">
          <div>
            <label for="quantity">Quanity:</label>
             <input type="number" min = "0" name="quantity" placeholder="0" style="width: 39px; margin: 1em">
             <button type="submit" class="btn btn-primary">Add to Cart</button>
          </div>
        </form>
      </div>
    </section>
  </body>
</html>
