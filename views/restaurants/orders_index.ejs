<!DOCTYPE html>
<html lang="en">
  <!-- head tag-->
  <%- include('../partials/_head', { title: 'Orders Index'}) %>
  <body>
    <!-- Navbar-->
    <%- include('../partials/_nav') %>

    <!-- Orders Index -->
    <section id="order-index">
      <!-- Orders Table -->
      <table class="table table-striped table-hover table-responsive">
        <thead>
          <tr>
            <th>Order Date</th>
            <th>Customer Name</th>
            <th>Phone Number</th>
            <th>Order</th>
            <th>Confirmed</th>
            <th>Completed</th>
            <th></th>
          </tr>
        <% for (let order in orders) { %>
          <tbody>
            <tr>
              <td><%= new Date(orders[order].order_date).toString().replace('(Coordinated Universal Time)', '') %></td>
              <td><%= orders[order].name %></td>
              <td><%= orders[order].phone_number %></td>
              <td>
                <% for (let item in orders[order].food_items) {%>
                  <%= orders[order].food_items[item].quantity %> X <%= orders[order].food_items[item].food_name %> <br>
                <% } %>
              </td>
              <td></td>
              <td></td>
              <td>
                <a href="/orders/<%= orders[order].id %>" class="btn btn-primary">View Details</a>
              </td>
            </tr>
          </tbody>
        <% } %>
      </table>
    </section>

  </body>
</html>
