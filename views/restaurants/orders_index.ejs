<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_head', { title: 'Orders Index'}) %>

<body>
  <%- include('../partials/_nav') %>

  <table class="table table-striped table-hover table-responsive">
    <thead>
      <tr>
        <th>Order Date</th>
        <th>Customer Name</th>
        <th>Phone Number</th>
        <th>Order</th>
        <th>Confirmed</th>
        <th>Completed</th>
        <th></th>
      </tr>
    <% for (let order of orders) { %>
      <tbody>
        <tr>
          <td><%= new Date(order.order_date).toString().replace('(Coordinated Universal Time)', '') %></td>
          <td><%= order.name %></td>
          <td><%= order.phone_number %></td>
          <td>
            <% for (let item of order.food_items) {%>
              <%= item.quantity %> X <%= item.food_name %> <br>
            <% } %>
          </td>
          <td><%= order.confirmed %></td>
          <td><%= order.completed %></td>
          <td>
            <a href="/orders/<%= order.id %>" class="btn btn-primary">View Details</a>
          </td>
        </tr>
      </tbody>
    <% } %>

  </table>
</body>

</html>
